<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" "http://castor.org/mapping.dtd">
<mapping>
	<class
		name="net.wedjaa.jasper.elasticsearch.adapter.ESAdapterImplementation">
		<map-to xml="ESAdapter" />
		<field name="class" type="java.lang.Class"
			handler="net.sf.jasperreports.data.ClassNameFieldHandler">
			<bind-xml name="class" node="attribute" />
		</field>
		<field name="name" type="string">
			<bind-xml name="name" node="element" />
		</field>
		<field name="elasticSearchIndexes" type="string">
			<bind-xml name="elasticSearchIndexes" node="element" />
		</field>
		<field name="elasticSearchTypes" type="string">
			<bind-xml name="elasticSearchTypes" node="element" />
		</field>
		<field name="elasticSearchHost" type="string">
			<bind-xml name="elasticSearchHost" node="element" />
		</field>
		<field name="elasticSearchPort" type="string">
			<bind-xml name="elasticSearchPort" node="element" />
		</field>
		<field name="elasticSearchCluster" type="string">
			<bind-xml name="elasticSearchCluster" node="element" />
		</field>
		<field name="elasticSearchUsername" type="string">
			<bind-xml name="elasticSearchUsername" node="element" />
		</field>
		<field name="elasticSearchPassword" type="string">
			<bind-xml name="elasticSearchPassword" node="element" />
		</field>
		<field name="elasticSearchMode" type="string">
			<bind-xml name="elasticSearchMode" node="element" />
		</field>
	</class>
</mapping>